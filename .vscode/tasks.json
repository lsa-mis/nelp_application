{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "RuboCop: Check All Files",
            "type": "shell",
            "command": "bundle",
            "args": [
                "exec",
                "rubocop"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "RuboCop: Auto-correct",
            "type": "shell",
            "command": "bundle",
            "args": [
                "exec",
                "rubocop",
                "--auto-correct"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "RuboCop: Check Current File",
            "type": "shell",
            "command": "bundle",
            "args": [
                "exec",
                "rubocop",
                "${file}"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Rails: Run Tests",
            "type": "shell",
